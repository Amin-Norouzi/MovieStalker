<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aminnorouzi.ms.controller.LibraryController">

    <left>
        <fx:include source="sidebar-view.fxml"/>
    </left>

    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <fx:include source="header-view.fxml"/>

            <Button mnemonicParsing="false" text="Add movie" onAction="#onAddition"/>
            <ScrollPane hbarPolicy="NEVER" hmax="0.0" maxWidth="-Infinity" minWidth="-Infinity"
                        prefHeight="575.0" prefWidth="800.0" vbarPolicy="NEVER">
                <TilePane fx:id="content" hgap="20.0" maxWidth="-Infinity" minWidth="-Infinity"
                          prefHeight="575.0" prefWidth="800.0" vgap="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </TilePane>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
